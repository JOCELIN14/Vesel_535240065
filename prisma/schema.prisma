datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          Int      @id @default(autoincrement())
  author      String
  title       String
  content     String
  imageUrl    String?
  likes       Int      @default(0)
  category    String
  tags        String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  published   Boolean  @default(false)
}